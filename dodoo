#!/usr/bin/env bash
POSITIONAL=()

# Parse input
SUBCOMMAND="$1"; shift

# LOG_HANDLER=""

while [ $# -gt 0 ]
do
    key="$1"

    case $key in
        -d|--dbname)
            DBNAME="$2"; shift; shift ;;
        -p|--port)
            PORT="$2"; shift; shift ;;
        -q|--quiet)
            if [ ! -z "$LOG_HANDLER" ]; then
                LOG_HANDLER="$LOG_HANDLER,werkzeug:WARNING"
            else
                LOG_HANDLER="werkzeug:WARNING"
            fi
            shift ;;
        *)
            POSITIONAL+=("$1"); shift ;;
    esac
done

# Initialize defaults
PORT=${PORT:-'80'}
DBNAME=${DBNAME:-'odoodb'}
if [ ! -z "$LOG_HANDLER" ]; then
    LOG_HANDLER="--log-handler=$LOG_HANDLER"
fi

# Define subcommands
up() {
    docker-compose run --rm -e DB_NAME="$DBNAME" -p "$PORT":8069 odoo odoo --workers=0 ${LOG_HANDLER:-} ${POSITIONAL:-}
}

# Run a desired action
# FIXME: Match a kind of pattern of valid subcommand names or so
$SUBCOMMAND
